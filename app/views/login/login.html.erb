<div class="container">
    <h2>로그인</h2>
    <%= form_tag login_path, method: :post do %>
    <div class="form-group">
      <%= label_tag :username, "사용자명:" %>
      <%= text_field_tag :username, nil, required: true %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "비밀번호:" %>
      <%= password_field_tag :password, nil, required: true %>
    </div>
    <div class="form-group">
      <%= submit_tag "로그인" %>
    </div>
  <% end %>
</div>
